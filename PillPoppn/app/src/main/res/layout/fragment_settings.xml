<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SettingsFragment">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/alarm1Frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/border">

                    <!-- Header -->
                    <EditText
                        android:id="@+id/pill1Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Pill 1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>


                    <!-- Content -->
                    <LinearLayout
                        android:id="@+id/alarm1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:orientation="vertical"
                        android:layout_below="@id/pill1Header"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center"
                            android:color="#DD761C"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <ListView
                                android:id="@+id/listViewAlarms1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:nestedScrollingEnabled="true"
                                android:background="#ECF8F9"/>

                        </androidx.cardview.widget.CardView>

                        <!-- Button -->
                        <Button
                            android:id="@+id/btnSetAlarm1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set Alarm"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </FrameLayout>



                <FrameLayout
                    android:id="@+id/alarm2Frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/border1">

                    <EditText
                        android:id="@+id/pill2Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Pill 2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:id="@+id/alarm2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:color="#DD761C"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <ListView
                                android:id="@+id/listViewAlarms2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFF2D7"
                                android:nestedScrollingEnabled="true"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/btnSetAlarm2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Set Alarm"/>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/alarm3Frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/border2">

                    <EditText
                        android:id="@+id/pill3Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Pill 3"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:id="@+id/alarm3Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        >



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:color="#DD761C"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <ListView
                                android:id="@+id/listViewAlarms3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FFF9D0"
                                android:nestedScrollingEnabled="true"/>

                        </androidx.cardview.widget.CardView>

                        <Button
                            android:id="@+id/btnSetAlarm3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Set Alarm "/>

                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/alarm4Frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/border3">

                    <EditText
                        android:id="@+id/pill4Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:text="Pill 4"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:padding="10dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@android:color/transparent"/>

                    <LinearLayout
                        android:id="@+id/alarm4Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="30dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:color="#DD761C"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp">

                            <!-- Your ListView goes inside the CardView -->
                            <ListView
                                android:id="@+id/listViewAlarms4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:background="#FFF2D7"
                                android:nestedScrollingEnabled="true"/>

                        </androidx.cardview.widget.CardView>
                        <Button
                            android:id="@+id/btnSetAlarm4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Set Alarm"/>
                    </LinearLayout>
                </FrameLayout>
                <Button
                    android:id="@+id/btnEditNames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Edit Names" />
            </LinearLayout>

        </ScrollView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


