<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Container for the counters -->
        <LinearLayout
            android:id="@+id/countersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="64dp">

            <!-- First Counter -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Outer Container with Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:layout_margin="10dp"
                    android:padding="8dp">

                    <!-- Inner Container with Background Color -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/inner_background">

                        <TextView
                            android:id="@+id/nameTextView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="Pill 1"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantityTextView1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nameTextView1"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/buttonPlus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView1"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="-2dp"
                            android:text="+"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/buttonMinus1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView1"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="-2dp"
                            android:layout_marginEnd="12dp"
                            android:text="-"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Second Counter -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Outer Container with Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border1"
                    android:layout_margin="10dp"
                    android:padding="8dp">

                    <!-- Inner Container with Background Color -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/inner_background1">

                        <TextView
                            android:id="@+id/nameTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="Pill 2"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantityTextView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nameTextView2"
                            android:layout_marginTop="0dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/buttonPlus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView2"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="0dp"
                            android:text="+"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/buttonMinus2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView2"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="13dp"
                            android:text="-"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Third Counter -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Outer Container with Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border2"
                    android:layout_margin="10dp"
                    android:padding="8dp">

                    <!-- Inner Container with Background Color -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/inner_background2">

                        <TextView
                            android:id="@+id/nameTextView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="Pill 3"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantityTextView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nameTextView3"
                            android:layout_marginTop="-2dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/buttonPlus3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView3"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="0dp"
                            android:text="+"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/buttonMinus3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView3"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="13dp"
                            android:text="-"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Fourth Counter -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <!-- Outer Container with Border -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border3"
                    android:layout_margin="10dp"
                    android:padding="8dp">

                    <!-- Inner Container with Background Color -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/inner_background3">

                        <TextView
                            android:id="@+id/nameTextView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="8dp"
                            android:text="Pill 4"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantityTextView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/nameTextView4"
                            android:layout_marginTop="-1dp"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="24sp" />

                        <Button
                            android:id="@+id/buttonPlus4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView4"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="1dp"
                            android:text="+"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/buttonMinus4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/quantityTextView4"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="14dp"
                            android:text="-"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
